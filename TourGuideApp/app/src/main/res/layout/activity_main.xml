<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.qenndrimm.android.tourguideapp.MainActivity">

        <TextView
            android:id="@+id/txtRestaurants"
            style="@style/categoryStyle"
            android:background="@color/category_restaurants"
            android:text="@string/restaurants" />

        <TextView
            android:id="@+id/txtPublicPlaces"
            style="@style/categoryStyle"
            android:background="@color/category_publicPlaces"
            android:text="@string/public_places" />

        <TextView
            android:id="@+id/txtEvents"
            style="@style/categoryStyle"
            android:background="@color/category_events"
            android:text="@string/events" />

        <TextView
            android:id="@+id/txtHotels"
            style="@style/categoryStyle"
            android:background="@color/category_hotels"
            android:text="@string/hotels" />
    </LinearLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />
</android.support.v4.widget.DrawerLayout>